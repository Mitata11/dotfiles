[global]
	# font and format
    font = "FantasqueSansMono-Regular 14"
    allow_markup = yes
    format = "<b>%a\n</b>%s\n%b"
    alignment = center
    word_wrap = yes
    ignore_newline = no
    transparency = 0
    show_age_threshold = 60 # show age of old messages

	# ordering
    sort = yes
    indicate_hidden = yes
	
  	# don't care if user is idle
	idle_threshold = 0	

	# size and monitor to use
    geometry = "300x5-0+28"
	monitor = 0				
    follow = none
    
	# no line seperating
	line_height = 0

    # seperator border between messages
	separator_height = 2
	separator_color = frame

	# no startup debug
    startup_notification = false

[frame]
    width = 2

[shortcuts]
    close = ctrl+space
    close_all = ctrl+shift+space

[urgency_low]
    frame_color = "#14b36e"
    foreground = "#e5eef7"
    background = "#000501"
    timeout = 10

[urgency_normal]
    frame_color = "#4d14dc"
    foreground = "#e5eef7"
    background = "#000501"
    timeout = 20

[urgency_critical]
    frame_color = "#f86844"
    foreground = "#e5eef7"
    background = "#000501"
    timeout = 0
