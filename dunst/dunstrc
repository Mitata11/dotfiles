[global]
	# font and format
    font = "FantasqueSansMono-Regular 12"
    allow_markup = yes
    format = "<b>%a\n</b>%s\n%b"
    alignment = center
    word_wrap = yes
    ignore_newline = no
    transparency = 0
    show_age_threshold = 60 # show age of old messages

	# ordering
    sort = yes
    indicate_hidden = yes
	
  	# don't care if user is idle
	idle_threshold = 0	

	# size and monitor to use
    geometry = "300x5-0+28"
	monitor = 0				
    follow = none
    
	# no line seperating
	line_height = 0

    # seperator border between messages
	separator_height = 2
	separator_color = frame

	# no startup debug
    startup_notification = false

[frame]
    width = 2

[shortcuts]
    close = ctrl+space
    close_all = ctrl+shift+space
    history = ctrl+grave
    context = ctrl+shift+period

[urgency_low]
    frame_color = "#00ff00"
    foreground = "#bbbbbb"
    background = "#1a1a1a"
    timeout = 10

[urgency_normal]
    foreground = "#bbbbbb"
    background = "#1a1a1a"
    frame_color = "#00ff00"
    timeout = 20

[urgency_critical]
    foreground = "#bbbbbb"
    background = "#1a1a1a"
    frame_color = "#ff0000"
    timeout = 0
