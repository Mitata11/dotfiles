! Reload with $ xrdb ~/.Xresources

! make the background transparent
URxvt.transparent: true
URxvt.shading: 20
*.blurRadius: 10

*.foreground:   	#ffffff
*.background:   	#000000
*.highlightColor:	#222222

! black
*.color0:       #000000
*.color8:       #000000

! red
*.color1:       #e91414
*.color9:       #e91414 

! green
*.color2:       #0ed816
*.color10:      #0ed816

! yellow
*.color3:       #dddd00
*.color11:      #dddd00

! blue
*.color4:       #1928e3 
*.color12:      #1928e3

! magenta
*.color5:       #fc22ca
*.color13:      #fc22ca

! cyan
*.color6:       #00edd7
*.color14:      #00edd7

! white
*.color7:       #ababab
*.color15:      #f9f9f9




! Copy and paste 
URxvt.keysym.Shift-Control-V: eval:paste_clipboard
URxvt.keysym.Shift-Control-C: eval:selection_to_clipboard

! Scrolling
URxvt*skipScroll:  true
URxvt*scrollBar:  false

! Focus
URxvt*fading: 30

! Cursor 
URxvt.cursorUnderline: true


! Fonts
URxvt*boldMode: true


! URxvt*letterSpace: -1
! URxvt*font: xft:Hack-Regular:size=10
! URxvt*boldFont: xft:Hack-Bold:size=10
! URxvt*italicFont: xft:Hack-Italic:size=10

URxvt*font: xft:FantasqueSansMono-Regular:size=12
URxvt*boldFont: xft:FantasqueSansMono-Bold:size=12
URxvt*italicFont: xft:FantasqueSansMono-Italic:size=12






